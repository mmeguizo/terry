
    <svg width="32" height="32" viewBox="0 0 32 32" xmlns="http://www.w3.org/2000/svg">
      <defs>
        <linearGradient id="bg" x1="0%" y1="0%" x2="100%" y2="100%">
          <stop offset="0%" style="stop-color:#1a1a1a;stop-opacity:1" />
          <stop offset="100%" style="stop-color:#3b82f6;stop-opacity:1" />
        </linearGradient>
        <linearGradient id="flag" x1="0%" y1="0%" x2="100%" y2="0%">
          <stop offset="0%" style="stop-color:#ffffff;stop-opacity:1" />
          <stop offset="50%" style="stop-color:#000000;stop-opacity:1" />
          <stop offset="100%" style="stop-color:#ffffff;stop-opacity:1" />
        </linearGradient>
      </defs>
      
      <!-- Background circle -->
      <circle cx="16" cy="16" r="14" fill="url(#bg)" stroke="#ffffff" stroke-width="2"/>
      
      
        <!-- Racing flag pattern -->
        <g transform="translate(6.4, 9.6)">
          <!-- Flag pole -->
          <rect x="0" y="0" width="3" height="12.8" fill="#ffffff"/>
          
          <!-- Checkered flag -->
          <g transform="translate(3, 0)">
            <rect x="0" y="0" width="9.6" height="6.4" fill="#ffffff"/>
            <rect x="0" y="0" width="4.8" height="3.2" fill="#000000"/>
            <rect x="4.8" y="3.2" width="4.8" height="3.2" fill="#000000"/>
            <rect x="0" y="3.2" width="4.8" height="3.2" fill="#ffffff"/>
            <rect x="4.8" y="0" width="4.8" height="3.2" fill="#ffffff"/>
          </g>
        </g>
        
        <!-- Racing text -->
        <text x="16" y="25.6" text-anchor="middle" fill="#ffffff" font-family="Arial, sans-serif" font-size="2.56" font-weight="bold">RACE</text>
      
    </svg>
  