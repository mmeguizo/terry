
    <svg width="16" height="16" viewBox="0 0 16 16" xmlns="http://www.w3.org/2000/svg">
      <defs>
        <linearGradient id="bg" x1="0%" y1="0%" x2="100%" y2="100%">
          <stop offset="0%" style="stop-color:#1a1a1a;stop-opacity:1" />
          <stop offset="100%" style="stop-color:#3b82f6;stop-opacity:1" />
        </linearGradient>
        <linearGradient id="flag" x1="0%" y1="0%" x2="100%" y2="0%">
          <stop offset="0%" style="stop-color:#ffffff;stop-opacity:1" />
          <stop offset="50%" style="stop-color:#000000;stop-opacity:1" />
          <stop offset="100%" style="stop-color:#ffffff;stop-opacity:1" />
        </linearGradient>
      </defs>
      
      <!-- Background circle -->
      <circle cx="8" cy="8" r="6" fill="url(#bg)" stroke="#ffffff" stroke-width="2"/>
      
      
        <!-- Racing flag pattern -->
        <g transform="translate(3.2, 4.8)">
          <!-- Flag pole -->
          <rect x="0" y="0" width="3" height="6.4" fill="#ffffff"/>
          
          <!-- Checkered flag -->
          <g transform="translate(3, 0)">
            <rect x="0" y="0" width="4.8" height="3.2" fill="#ffffff"/>
            <rect x="0" y="0" width="2.4" height="1.6" fill="#000000"/>
            <rect x="2.4" y="1.6" width="2.4" height="1.6" fill="#000000"/>
            <rect x="0" y="1.6" width="2.4" height="1.6" fill="#ffffff"/>
            <rect x="2.4" y="0" width="2.4" height="1.6" fill="#ffffff"/>
          </g>
        </g>
        
        <!-- Racing text -->
        <text x="8" y="12.8" text-anchor="middle" fill="#ffffff" font-family="Arial, sans-serif" font-size="1.28" font-weight="bold">RACE</text>
      
    </svg>
  